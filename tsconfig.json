{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "Bundler",
    "strict": true,
    "types": [
      "node",
      "jest"
    ],
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "rootDir": ".",
    "baseUrl": ".",
    "outDir": "dist",
    "paths": {
      "@/domain/*": ["./src/domain/*"],
      "@/infrastructure/*": ["./src/infrastructure/*"],
      "@/tests/*": ["./tests/*"],
    },
    "experimentalDecorators": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*", 
    "tests/**/*",
    "jest.config.js",
    "eslint.config.js",
    ".eslintrc.cjs"
  ],
}